{
  "Main" : {
    "title" : {
      "type" : "StructuredText",
      "config" : {
        "single" : "heading3",
        "label" : "title",
        "placeholder" : "Title, without step number"
      }
    },
    "content" : {
      "type" : "StructuredText",
      "config" : {
        "multi" : "paragraph, preformatted, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, rtl",
        "allowTargetBlank" : true,
        "label" : "content"
      }
    },
    "belongs_to" : {
      "type" : "Link",
      "config" : {
        "select" : "document",
        "customtypes" : [ "travel_section" ],
